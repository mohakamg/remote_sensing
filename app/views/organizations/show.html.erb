<p id="notice"><%= notice %></p>

<p>
  <strong>Organization ID:</strong>
  <%= @organization.org_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @organization.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @organization.phone %>
</p>

<p>
  <strong>Organization Type:</strong>
  <%= @organization.org_type %>
</p><br><br>

<strong>Organization Sensors:</strong>
<table>
  <thead>
    <tr>
      <th>Sensor Name</th>
      <th>Sensor ID</th>
    </tr>
  </thead>

  <tbody>
    <% @organization.sensors.each do |s| %>
      <tr>
        <td><%= s.sens_name %></td>
        <td><%= s.sens_id %>, <%= link_to "View Sensor Details", s %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_organization_path(@organization) %> |
<%= link_to 'Back', organizations_path %>
